{
  // =============================================================================
  // VS Code Launch Configurations
  // =============================================================================
  //
  // PREREQUISITES:
  //   1. Copy secrets.json.example to secrets.json in the app directory
  //   2. Fill in your API keys in secrets.json
  //   3. Run: ./scripts/generate_secrets.sh (generates native config files)
  //
  // The --dart-define-from-file flag passes secrets to Dart code at compile time.
  // Native code (iOS/Android) reads from generated xcconfig/properties files.
  //
  // NOTE: Native logs like "FrameEvents: updateAcquireFence" and
  // "ProxyAndroidLoggerBackend" are from Google Maps SDK and are harmless.
  // VS Code debug console doesn't support log filtering. To filter these,
  // run manually in terminal: flutter run 2>&1 | grep -v "FrameEvents\|ProxyAndroidLoggerBackend"
  // =============================================================================

  "version": "0.2.0",
  "configurations": [
    {
      "name": "Job Tracker (debug)",
      "type": "dart",
      "request": "launch",
      "cwd": "apps/job_application_tracker",
      "flutterMode": "debug",
      "toolArgs": ["--dart-define-from-file=secrets.json"],
      "preLaunchTask": "generate-secrets"
    },
    {
      "name": "Job Tracker (release)",
      "type": "dart",
      "request": "launch",
      "cwd": "apps/job_application_tracker",
      "flutterMode": "release",
      "toolArgs": ["--dart-define-from-file=secrets.json"],
      "preLaunchTask": "generate-secrets"
    },
    {
      "name": "Job Tracker (profile)",
      "type": "dart",
      "request": "launch",
      "cwd": "apps/job_application_tracker",
      "flutterMode": "profile",
      "toolArgs": ["--dart-define-from-file=secrets.json"],
      "preLaunchTask": "generate-secrets"
    },
    {
      "name": "Budget Tracker (debug)",
      "type": "dart",
      "request": "launch",
      "cwd": "apps/budget_tracker",
      "flutterMode": "debug"
    },
    {
      "name": "Budget Tracker (release)",
      "type": "dart",
      "request": "launch",
      "cwd": "apps/budget_tracker",
      "flutterMode": "release"
    },
    {
      "name": "Budget Tracker (profile)",
      "type": "dart",
      "request": "launch",
      "cwd": "apps/budget_tracker",
      "flutterMode": "profile"
    }
  ]
}
